<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_recipe_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/recipe_cover_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnail"
                android:paddingLeft="@dimen/recipe_title_padding_left"
                android:paddingTop="@dimen/recipe_title_padding_left"
                android:paddingBottom="@dimen/recipe_title_padding_bottom"
                android:textColor="@color/black_overlay"
                android:textSize="@dimen/recipe_title"
                android:text="Dupeczka"/>

            <TextView
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:paddingTop="@dimen/recipe_subtitle_padding_top"
                android:paddingBottom="@dimen/recipe_subtitle_padding_bottom"
                android:paddingLeft="@dimen/recipe_subtitle_padding_left"
                android:paddingRight="@dimen/recipe_subtitle_padding_right"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/recipe_count"
                android:text="Dupeczka"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_toRightOf="@id/level"
                android:paddingTop="@dimen/recipe_subtitle_padding_top"
                android:paddingBottom="@dimen/recipe_subtitle_padding_bottom"
                android:paddingLeft="@dimen/recipe_subtitle_padding_left"
                android:paddingRight="@dimen/recipe_subtitle_padding_right"
                android:textSize="@dimen/recipe_count"
                android:text="Dupeczka"/>

            <TextView
                android:id="@+id/person_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_toRightOf="@id/time"
                android:paddingTop="@dimen/recipe_subtitle_padding_top"
                android:paddingBottom="@dimen/recipe_subtitle_padding_bottom"
                android:paddingLeft="@dimen/recipe_subtitle_padding_left"
                android:paddingRight="@dimen/recipe_subtitle_padding_right"
                android:textSize="@dimen/recipe_count"
                android:text="Dupeczka"/>

            <!--
            <ImageView
                android:id="@+id/overflow"
                android:layout_width="@dimen/ic_recipe_overflow_width"
                android:layout_height="@dimen/ic_recipe_overflow_height"
                android:layout_alignParentRight="true"
                android:layout_below="@id/thumbnail"
                android:layout_marginTop="@dimen/ic_recipe_overflow_margin_top"
                android:scaleType="centerCrop"/>
            -->
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>